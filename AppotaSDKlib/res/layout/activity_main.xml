<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/margin_parent">
        
        <Button
            android:id="@+id/get_access_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="getAccessToken"
            android:text="GetAccessToken" />

        <Button
            android:id="@+id/non_user_access_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="getNonUserAccessToken"
            android:text="GetNonUserAccessToken" />
        
        <Button
            android:id="@+id/log_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="login"
            android:text="Login" />

        <Button
            android:id="@+id/in_app_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="inAppSMS"
            android:text="InAppSMS" />

        <Button
            android:id="@+id/topup_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="topupSMS"
            android:text="TopupSMS" />

        <Button
            android:id="@+id/inapp_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="inAppCard"
            android:text="InAppCard" />

        <Button
            android:id="@+id/topup_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="topupCard"
            android:text="TopupCard" />

        <Button
            android:id="@+id/inapp_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="inAppBank"
            android:text="InAppBank" />

        <Button
            android:id="@+id/topup_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="topupBank"
            android:text="TopupBank" />

        <Button
            android:id="@+id/inapp_paypal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="inAppPaypal"
            android:text="InAppPaypal" />

        <Button
            android:id="@+id/topup_paypal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="topupPaypal"
            android:text="TopupPaypal" />
    </LinearLayout>

</ScrollView>